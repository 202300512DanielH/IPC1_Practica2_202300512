<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: DarkTurquoise;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Panels.SecondWindow">
   <children>
      <Button fx:id="Uploadtrips" layoutX="46.0" layoutY="50.0" mnemonicParsing="false" onAction="#handleButtonUploadtrips" prefHeight="26.0" prefWidth="182.0" style="-fx-background-color: DarkCyan;" text="Cargar Rutas (.csv)" textFill="#fff8f8">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>

      <Button fx:id="Editdistance" layoutX="365.0" layoutY="50.0" onAction="#handleButtonEditdistance" mnemonicParsing="false" prefHeight="26.0" prefWidth="182.0" style="-fx-background-color: DeepSkyBlue;" text="Editar distancia">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>

      <TableView fx:id="table" layoutX="46.0" layoutY="100.0" prefHeight="250.0" prefWidth="500.0">
         <columns>
            <TableColumn fx:id="idColumn" text="ID"></TableColumn>
            <TableColumn fx:id="startColumn" prefWidth="165.0" text="Lugar de inicio" />
            <TableColumn fx:id="endColumn" prefWidth="165.0" text="Lugar de final" />
            <TableColumn fx:id="distanceColumn" prefWidth="165.0" text="Distancia (km)" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
