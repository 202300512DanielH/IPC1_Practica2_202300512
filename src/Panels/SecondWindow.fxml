<AnchorPane prefHeight="449.0" prefWidth="600.0" style="-fx-background-color: DarkTurquoise;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Panels.SecondWindow">
   <children>
      <VBox layoutX="8.0" layoutY="3.0" prefHeight="434.0" prefWidth="584.0" spacing="10.0">
         <children>
            <Button fx:id="Uploadtrips" layoutX="46.0" layoutY="50.0" mnemonicParsing="false" onAction="#handleButtonUploadtrips" prefHeight="26.0" prefWidth="577.0" style="-fx-background-color: DarkCyan;" text="Cargar Rutas (.csv)" textFill="#fff8f8">
               <font>
                  <Font name="Comic Sans MS" size="12.0" />
